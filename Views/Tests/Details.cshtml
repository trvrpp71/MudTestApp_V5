@model MudTestApp.Models.TestViewModels.TestDetailViewModel

@{
    ViewData["Title"] = "Details";
}
   
    
<div>
    <h4>Details for Test Number: @Model.TestDVm.TestID</h4>
    <hr />
    <dl class="row"> @*Test Info (header stuff)*@
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.TestDVm.Epicor)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.TestDVm.Epicor)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.TestDVm.Customer.CompanyName)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.TestDVm.Customer.CompanyName)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.TestDVm.ContactName)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.TestDVm.ContactName)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.TestDVm.LabTechAssigned)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.TestDVm.LabTechAssigned)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.TestDVm.MudType)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.TestDVm.MudType)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.TestDVm.MudSystemName)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.TestDVm.MudSystemName)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.TestDVm.ReceivedDate)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.TestDVm.ReceivedDate)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.TestDVm.ExposureTime)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.TestDVm.ExposureTime)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.TestDVm.DateStarted)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.TestDVm.DateStarted)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.TestDVm.DateEnded)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.TestDVm.DateEnded)
        </dd>
        <dt class = "col-sm-3">
            @Html.DisplayNameFor(model => model.TestDVm.TestComments)
        </dt>
        <dd class = "col-sm-9">
            @Html.DisplayFor(model => model.TestDVm.TestComments)
        </dd>
    </dl>

     <div class="m-3">
        <a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Model.TestDVm.TestID">Edit Test Info </a> |
        <a class="btn btn-outline-info" asp-action="Index">Cancel</a>
    </div>

     <h2>Test Results</h2>
 
    <hr />
 
    <div class="table-responsive">
        <table class="table table-sm" style="width:100%" id="detailTable">

            <thead>
                <th>Test #</th>
                <th>Seq#</th>
                <th>Compound</th>
                <th>Test Temp</th>
                <th>Sample #</th>
                <th>Thk</th>
                <th>Hrd(b)</th>
                <th>Hrd(a)</th>
                <th>Air Wt(b)</th>
                <th>Air Wt(a)</th>
                <th>Water Wt(b)</th>
                <th>Water Wt(a)</th>
                <th>25&#37 Mod</th>
                <th>50&#37 Mod</th>
                <th>100&#37 Mod</th>
                <th>Elong</th>
                <th>Tensile</th>
                <th>Observations</th>
                <th></th>

            </thead>

            <tbody>
                @foreach (var item in Model.TestDVm.Results)
                {
                    
                    <tr>
                        <td>@Html.DisplayFor(model => item.TestID)</td>
                        <td>@Html.DisplayFor(modelItem => item.TestResultsID)</td>
                        <td>@Html.DisplayFor(modelItem => item.Compound.CompoundName)</td>
                        <td>@Html.DisplayFor(modelItem => item.TestTemp)</td>
                        <td>S1</td>
                        <td>@Html.DisplayFor(modelItem => item.S1Thickness)</td>
                        <td>@Html.DisplayFor(modelItem => item.S1Hardness_b)</td>
                        <td>@Html.DisplayFor(modelItem => item.S1Hardness_a)</td>
                        <td>@Html.DisplayFor(modelItem => item.S1WtAir_b)</td>
                        <td>@Html.DisplayFor(modelItem => item.S1WtAir_a)</td>
                        <td>@Html.DisplayFor(modelItem => item.S1WtWater_b)</td>
                        <td>@Html.DisplayFor(modelItem => item.S1WtWater_a)</td>
                        <td>@Html.DisplayFor(modelItem => item.S1_25Mod)</td>
                        <td>@Html.DisplayFor(modelItem => item.S1_50Mod)</td>
                        <td>@Html.DisplayFor(modelItem => item.S1_100Mod)</td>
                        <td>@Html.DisplayFor(modelItem => item.S1_elongation)</td>
                        <td>@Html.DisplayFor(modelItem => item.S1_tensile)</td>
                        <td></td> @*observation placeholder*@
                        <td></td> @*last column placeholder*@
                    </tr>
                    <tr>
                        <td>@Html.DisplayFor(model => item.TestID)</td>
                        <td>@Html.DisplayFor(modelItem => item.TestResultsID)</td>
                        <td>@Html.DisplayFor(modelItem => item.Compound.CompoundName)</td>
                        <td>@Html.DisplayFor(modelItem => item.TestTemp)</td>
                        <td>S2</td>
                        <td>@Html.DisplayFor(modelItem => item.S2Thickness)</td>
                        <td>@Html.DisplayFor(modelItem => item.S2Hardness_b)</td>
                        <td>@Html.DisplayFor(modelItem => item.S2Hardness_a)</td>
                        <td>@Html.DisplayFor(modelItem => item.S2WtAir_b)</td>
                        <td>@Html.DisplayFor(modelItem => item.S2WtAir_a)</td>
                        <td>@Html.DisplayFor(modelItem => item.S2WtWater_b)</td>
                        <td>@Html.DisplayFor(modelItem => item.S2WtWater_a)</td>
                        <td>@Html.DisplayFor(modelItem => item.S2_25Mod)</td>
                        <td>@Html.DisplayFor(modelItem => item.S2_50Mod)</td>
                        <td>@Html.DisplayFor(modelItem => item.S2_100Mod)</td>
                        <td>@Html.DisplayFor(modelItem => item.S2_elongation)</td>
                        <td>@Html.DisplayFor(modelItem => item.S2_tensile)</td>
                        <td></td> @*observation placeholder*@
                        <td></td> @*last column placeholder*@
                    </tr>
                    <tr class="table-info">
                        <td>@Html.DisplayFor(model => item.TestID)</td>
                        <td>@Html.DisplayFor(modelItem => item.TestResultsID)</td>
                        <td>@Html.DisplayFor(modelItem => item.Compound.CompoundName)</td>
                        <td>@Html.DisplayFor(modelItem => item.TestTemp)</td>
                        <td>S3</td>
                        <td>@Html.DisplayFor(modelItem => item.S3Thickness)</td>
                        <td>@Html.DisplayFor(modelItem => item.S3Hardness_b)</td>
                        <td>@Html.DisplayFor(modelItem => item.S3Hardness_a)</td>
                        <td>@Html.DisplayFor(modelItem => item.S3WtAir_b)</td>
                        <td>@Html.DisplayFor(modelItem => item.S3WtAir_a)</td>
                        <td>@Html.DisplayFor(modelItem => item.S3WtWater_b)</td>
                        <td>@Html.DisplayFor(modelItem => item.S3WtWater_a)</td>
                        <td>@Html.DisplayFor(modelItem => item.S3_25Mod)</td>
                        <td>@Html.DisplayFor(modelItem => item.S3_50Mod)</td>
                        <td>@Html.DisplayFor(modelItem => item.S3_100Mod)</td>
                        <td>@Html.DisplayFor(modelItem => item.S3_elongation)</td>
                        <td>@Html.DisplayFor(modelItem => item.S3_tensile)</td>
                        <td>@Html.DisplayFor(modelItem => item.Observations)</td>
                        <td></td>
                        <td><a asp-controller="TestResults" asp-action="Edit" asp-route-id="@item.TestResultsID">Edit</a> |
                        <a asp-controller="TestResults" asp-action="Delete" asp-route-id="@item.TestResultsID">Delete</a></td>
                    </tr>
                }        
            </tbody>
         </table>
    </div>
    <div class="m-3">
        <a class="btn btn-outline-success btn-block mt-2" asp-controller="TestResults" asp-action="Create" asp-route-id="@Model.TestDVm.TestID"> Add New Test Result </a>
    </div>
</div>

@section Scripts {
    <script src="~/js/site.js"></script>
}