@model MudTestApp.Models.Test

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Test</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Customer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Customer)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CustomerContact)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CustomerContact)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.LabTechAssigned)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.LabTechAssigned)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MudType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MudType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.MudSystemName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.MudSystemName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ReceivedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ReceivedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ExposureTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ExposureTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateStarted)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateStarted)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DateEnded)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DateEnded)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TimeOut)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TimeOut)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.TestComments)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TestComments)
        </dd>
     </dl>

     <h2>Test Results</h2>

    @foreach (var test in Model.Results)
    {            
        <table class="table">
            <tr>
                <th>Compound</th>
                <th>Test Temp</th>
            </tr>
                    
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => test.Compound.CompoundName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem=> test.TestTemp)
                </td>
            </tr>
            <tr>
                <ul> 
                    <li>Sample Thickness: @Html.DisplayFor(modelItem=> test.S1Thickness)</li>
                    <li>Hardness(A): @Html.DisplayFor(modelItem=> test.S1Hardness_a)</li>
                    <li>Hardness(B): @Html.DisplayFor(modelItem=> test.S1Hardness_b)</li>
                    <li>Air Weight(A): @Html.DisplayFor(modelItem=> test.S1WtAir_a)</li>
                    <li>Air Weight(B): @Html.DisplayFor(modelItem=> test.S1WtAir_b)</li>
                    <li>Water Weight(A): @Html.DisplayFor(modelItem=> test.S1WtWater_a)</li>
                    <li>Water Weight(B): @Html.DisplayFor(modelItem=> test.S1WtWater_b)</li>
                    <li>25% Modulus: @Html.DisplayFor(modelItem=> test.S1_25Mod)</li>
                    <li>50% Moduluss @Html.DisplayFor(modelItem=> test.S1_50Mod)</li>
                    <li>100% Modulus: @Html.DisplayFor(modelItem=> test.S1_100Mod)</li>
                    <li>Elongation: @Html.DisplayFor(modelItem=> test.S1_elongation)</li>
                    <li>Tensile: @Html.DisplayFor(modelItem=> test.S1_tensile)</li>

                </ul>
            </tr>


        </table>
    }









</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.TestID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
