@model MudTestApp.Models.TestViewModels.TestIndexData

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Test</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Test.Customer)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Test.Customer)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Test.CustomerContact)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Test.CustomerContact)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Test.LabTechAssigned)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Test.LabTechAssigned)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Test.MudType)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Test.MudType)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Test.MudSystemName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Test.MudSystemName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Test.ReceivedDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Test.ReceivedDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Test.ExposureTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Test.ExposureTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Test.DateStarted)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Test.DateStarted)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Test.DateEnded)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Test.DateEnded)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Test.TimeOut)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Test.TimeOut)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Test.TestComments)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Test.TestComments)
        </dd>

        <dt class="col-sm-2">
           <h1>Test Results</h1>
        </dt>

        <dd class="col-sm-10">
            <table class="table">

                @foreach (var item in Model.TestResults)
                {
                    /*header row for compound*/
                    <tr> 
                        <th>Compound </th>
                    </tr>

                    <tr>
                        @*<th>@Html.DisplayFor(model => model.Compound.CompoundName)</th>*@
                        <td>@Html.DisplayFor(modelItem => item.Compound)</td>
                    </tr>
                    <tr>
                        <th>Test Temp</th>
                        <th>Sample 1</th>
                        <th>Sample 2</th>
                        <th>Sample 3</th>
                    </tr>                        
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.TestTemp)
                        </td>
                    </tr>
  
                    /* then start looping through the test temps*/

                    @foreach (var result in Model.TestResults)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => result.TestTemp)
                            </td>
                        </tr> 
                        <tr>
                            <td>@Html.DisplayFor(modelItem => result.S1Hardness_a)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayFor(modelItem => result.S1Hardness_b)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayFor(modelItem => result.S1Thickness)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayFor(modelItem => result.S1WtAir_a)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayFor(modelItem => result.S1WtAir_b)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayFor(modelItem => result.S1WtWater_a)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayFor(modelItem => result.S1WtWater_b)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayFor(modelItem => result.S1_25Mod)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayFor(modelItem => result.S1_50Mod)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayFor(modelItem => result.S1_100Mod)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayFor(modelItem => result.S1_elongation)</td>
                        </tr>
                        <tr>
                            <td>@Html.DisplayFor(modelItem => result.S1_tensile)</td>
                        </tr>
                    }
  
                }



            </table>
        </dd>



</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Test.TestID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
